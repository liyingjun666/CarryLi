<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyingjun">
<!--    登录接口sql-->
    <select id="login" parameterType="com.liyingjun.model.User" resultType="Integer">
        select count(*) from `wx-test`.user where userName=#{userName} and password= #{password}
    </select>
<!--    添加用户sql-->
    <insert id="addUser" parameterType="com.liyingjun.model.User">
        insert into `wx-test`.user (id, userName, password, age, sex, permission, isDelete)
         VALUES(#{id},#{userName},#{password},#{age},#{sex},#{permission},#{isDelete})
    </insert>
<!--    获取用户sql-->
    <select id="getUserInfo" parameterType="com.liyingjun.model.User" resultType="com.liyingjun.model.User">
        select * from `wx-test`.user
        <trim prefix="where" prefixOverrides="and">

            <if test="null !=id and '' != id ">
                and id=#{id}
            </if>

            <if test="null !=userName and '' != userName ">
                and userName=#{userName}

            </if>

            <if test="null !=password and '' != password ">
                and password=#{password}
            </if>

            <if test="null !=age and '' != age ">
                and age=#{age}
            </if>

               <if test="null !=sex and '' != sex ">
            and password=#{sex}
            </if>

               <if test="null !=permission and '' != permission ">
            and permission=#{permission}
            </if>

            <if test="null !=isDelete and '' != isDelete ">
                and isDelete=#{isDelete}
            </if>

        </trim>
</select>

<!--    更新/删除用户信息-->
    <update id="updateUserInfo" parameterType="com.liyingjun.model.User">
        update `wx-test`.user
        <trim prefix="SET" suffixOverrides=",">
            <if test="null !=userName and '' !=userName">
                userName= #{userName},
            </if>
            <if test="null !=sex and '' !=sex">
                sex= #{sex},
            </if>
            <if test="null !=age and '' !=age">
                age= #{age},
            </if>
            <if test="null !=permission and '' !=permission">
                permission= #{permission},
            </if>
            <if test="null !=isDelete and '' !=isDelete">
                isDelete= #{isDelete},
            </if>
        </trim>
    </update>
</mapper>